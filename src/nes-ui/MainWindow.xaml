<Window x:Class="nes_ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nes_ui"
        mc:Ignorable="d"
        Title="NES Emulator" Height="560" Width="800"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open ROM..." Click="OpenROM_Click"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Options">
                <MenuItem Header="_Key Mapping..." Click="KeyMapping_Click"/>
            </MenuItem>
        </Menu>
        
        <Border Background="Black" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="ScreenImage" 
                   Width="512" 
                   Height="480" 
                   Stretch="Fill"
                   RenderOptions.BitmapScalingMode="NearestNeighbor"/>
        </Border>
    </DockPanel>
</Window>
