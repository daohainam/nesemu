<Window x:Class="nes_ui.KeyMappingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nes_ui"
        mc:Ignorable="d"
        Title="Key Mapping Configuration" Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Click on a button and press a key to map it"
                   FontSize="14"
                   Margin="0,0,0,20"
                   TextWrapping="Wrap"/>

        <StackPanel Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Button A:" VerticalAlignment="Center" Margin="0,5"/>
                <Button Grid.Row="0" Grid.Column="1" x:Name="ButtonA" Content="Z" Click="MapButton_Click" Tag="A" Margin="0,5" Height="30"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Button B:" VerticalAlignment="Center" Margin="0,5"/>
                <Button Grid.Row="1" Grid.Column="1" x:Name="ButtonB" Content="X" Click="MapButton_Click" Tag="B" Margin="0,5" Height="30"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Select:" VerticalAlignment="Center" Margin="0,5"/>
                <Button Grid.Row="2" Grid.Column="1" x:Name="ButtonSelect" Content="A" Click="MapButton_Click" Tag="Select" Margin="0,5" Height="30"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Start:" VerticalAlignment="Center" Margin="0,5"/>
                <Button Grid.Row="3" Grid.Column="1" x:Name="ButtonStart" Content="S" Click="MapButton_Click" Tag="Start" Margin="0,5" Height="30"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Up:" VerticalAlignment="Center" Margin="0,5"/>
                <Button Grid.Row="4" Grid.Column="1" x:Name="ButtonUp" Content="Up" Click="MapButton_Click" Tag="Up" Margin="0,5" Height="30"/>

                <TextBlock Grid.Row="5" Grid.Column="0" Text="Down:" VerticalAlignment="Center" Margin="0,5"/>
                <Button Grid.Row="5" Grid.Column="1" x:Name="ButtonDown" Content="Down" Click="MapButton_Click" Tag="Down" Margin="0,5" Height="30"/>

                <TextBlock Grid.Row="6" Grid.Column="0" Text="Left:" VerticalAlignment="Center" Margin="0,5"/>
                <Button Grid.Row="6" Grid.Column="1" x:Name="ButtonLeft" Content="Left" Click="MapButton_Click" Tag="Left" Margin="0,5" Height="30"/>

                <TextBlock Grid.Row="7" Grid.Column="0" Text="Right:" VerticalAlignment="Center" Margin="0,5"/>
                <Button Grid.Row="7" Grid.Column="1" x:Name="ButtonRight" Content="Right" Click="MapButton_Click" Tag="Right" Margin="0,5" Height="30"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Reset to Default" Click="ResetToDefault_Click" Width="120" Margin="0,0,10,0"/>
            <Button Content="Close" Click="Close_Click" Width="80" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
